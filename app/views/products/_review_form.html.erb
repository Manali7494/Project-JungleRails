<br/><br/>
<% if current_user %>
<h2>Leave a Review:</h2>
<%= form_for :review, url: "#{@product.id}/reviews" do |f| %>
<div class="dropdown"> Select a rating (out of 5)
   <%= f.select :rating, [1, 2, 3, 4, 5] %><br/><br/>
</div>
<textarea class="form-control" rows="3" <%= f.text_area :description , placeholder: "Please give details on your review (required)"%><br/></textarea>
<div class="form-group">
   <div class="col-sm-10">
      <button type="submit" class="btn btn-default"<%= f.submit "Submit" %>Submit Review</button>
   </div>
</div>
<% end %>
<% end %>