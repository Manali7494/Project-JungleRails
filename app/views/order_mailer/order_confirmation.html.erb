<h1> Thank you for your purchase </h1>

    <h3> The following email was used to purchase the items: <%= @order.email %></h3>
    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2"> Product</th>
          <th>Quantity</th>          
          <th> Unit Price </th>
        </tr>
      </thead>
      <tbody>
       <% @order.line_items.each do |element| %>
        <tr>
    <td>
    </td>
    <td>
        <h3> <%= element.product.name %></h3>
        <h4><%= element.product.description %></h4>
    </td>
    <td>
        <%= element.quantity %>           
    </td>
    <td>
        <%= element.total_price_cents / 100.00%>
    </td>
</tr>       
       <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="3">
            TOTAL:
          </th>
          <th>
            $ <%= @order.total_cents/100.00 %>
          </th>
        </tr>
      </tfoot>
    </table>